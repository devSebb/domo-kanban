<div class="container w-1/4 mt-4 mx-auto">
  <h2 class="mb-4 text-2xl font-semibold">Create New Board</h2>
  <%= form_with model: [@organization, @board], class: "needs-validation", novalidate: true do |f| %>
    <div class="flex flex-col mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control rounded-md focus:border-secondary focus:ring-secondary", required: true %>
    </div>
    <div class="flex flex-col mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control rounded-md focus:border-secondary focus:ring-secondary", rows: 3 %>
    </div>
    <%= f.submit "Create Board", class: "btn btn-primary" %>
  <% end %>
</div>
