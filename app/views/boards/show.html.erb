<div class="flex space-x-14">
  <div class="flex flex-col">
    <h1><%= @board.name %></h1>
    <p><%= @board.description %></p>
  </div>
  <div class="flex">
    <%= link_to "Edit Board", edit_organization_board_path(@board.organization, @board), class: "text-black text-center bg-gray-300 p-2 rounded-md w-24" %>
    <%= link_to "Delete Board", organization_board_path(@board.organization, @board), method: :delete, data: { confirm: "Are you sure you want to delete this board?" }, class: "text-black text-center bg-gray-300 p-2 rounded-md w-24" %>
  </div>

  <%= form_with model: [@board.organization, @board, @board.lists.build], local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.submit "Create List" %>
  <% end %>

  <ul>
    <% @board.lists.each do |list| %>
      <li><%= list.name %></li>
    <% end %>
  </ul>
</div>
