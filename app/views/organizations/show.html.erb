<div class="flex flex-col mx-10">
  <div class="flex space-x-10 items-center">
    <div class="flex flex-col w-2/3">
      <h1 class="font-bold text-2xl"><%= @organization.name %></h1>
      <p class="text-gray-600"><%= @organization.description %></p>
    </div>
    <div class="my-5">
      <div class="flex items-center">
        <h2 class="font-bold text-lg mr-2 text-start">Members</h2>
        <button id="showInviteForm" class="text-blue-500 hover:text-blue-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
      <div class="flex -space-x-4 rtl:space-x-reverse">
        <% @organization.memberships.includes(:user).each_with_index do |membership, index| %>
          <% if index < 3 %>
            <% if membership.user.photo.attached? %>
              <%= image_tag membership.user.photo, class: "w-10 h-10 border-2 border-white rounded-full dark:border-gray-800" %>
            <% else %>
              <div class="relative w-9 h-9 overflow-hidden bg-gray-100 border-2 border-white rounded-full dark:border-gray-800">
                <svg class="absolute w-11 h-11 text-gray-400 -left-1.5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path></svg>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <% if @organization.memberships.count > 3 %>
          <a class="flex items-center justify-center w-10 h-10 text-xs font-medium text-white bg-gray-700 border-2 border-white rounded-full hover:bg-gray-600 dark:border-gray-800" href="#">
            +<%= @organization.memberships.count - 3 %>
          </a>
        <% end %>
      </div>
    </div>
  </div>

  <div id="inviteUserForm" class="hidden">
    <h2 class="font-semibold text-lg">Invite User</h2>
    <%= form_with url: organization_memberships_path(@organization), local: true do |f| %>
      <%= f.label :user_id, "Invite Member" %>
      <%= f.collection_select 'membership[user_id]', User.all, :id, :email, prompt: "Select a user" %>
      <%= f.label :role %>
      <%= f.select 'membership[role]', Membership.roles.keys.map { |role| [role.humanize, role] }, prompt: "Select a role" %>
      <%= f.submit "Invite User" %>
    <% end %>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const showInviteFormButton = document.getElementById('showInviteForm');
      const inviteUserForm = document.getElementById('inviteUserForm');

      showInviteFormButton.addEventListener('click', function() {
        inviteUserForm.classList.toggle('hidden');
      });
    });
  </script>

  <div class="flex space-x-8 mt-5">
    <h2 class="font-semibold text-lg">Boards</h2>
    <%= link_to "Create Board", new_organization_board_path(@organization), class: "text-center text-sm bg-gray-300 px-2 py-1 rounded-md w-24" %>
  </div>
  <ul>
    <% @organization.boards.each do |board| %>
      <li class="my-2 hover:text-blue-800"><%= link_to board.name, organization_board_path(@organization, board) %></li>
    <% end %>
  </ul>
</div>
