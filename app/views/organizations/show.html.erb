<div class="flex flex-col mx-10">
  <div class="flex justify-between items-center">
    <div class="flex flex-col">
      <h1 class="font-bold text-2xl"><%= @organization.name %></h1>
      <p class="text-gray-600"><%= @organization.description %></p>
    </div>
    <div class="my-5">
      <h2 class="font-bold text-lg">Members</h2>
      <ul>
        <% @organization.memberships.includes(:user).each do |membership| %>
          <li>
            <%= membership.user.email %> - <%= membership.role.humanize %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <h2 class="font-semibold text-lg">Invite User</h2>
  <%= form_with url: organization_memberships_path(@organization), local: true do |f| %>
    <%= f.label :user_id, "Invite Member" %>
    <%= f.collection_select 'membership[user_id]', User.all, :id, :email, prompt: "Select a user" %>
    <%= f.label :role %>
    <%= f.select 'membership[role]', Membership.roles.keys.map { |role| [role.humanize, role] }, prompt: "Select a role" %>
    <%= f.submit "Invite User" %>
  <% end %>

  <div class="flex space-x-8 mt-5">
    <h2 class="font-semibold text-lg">Boards</h2>
    <%= link_to "Create Board", new_organization_board_path(@organization), class: "text-center text-sm bg-gray-300 px-2 py-1 rounded-md w-24" %>
  </div>
  <ul>
    <% @organization.boards.each do |board| %>
      <li class="my-2 hover:text-blue-800"><%= link_to board.name, organization_board_path(@organization, board) %></li>
    <% end %>
  </ul>
</div>
