<div class="mx-10">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl my-5">My Projects</h1>
    <%= link_to "New", new_organization_path, class: "bg-secondary hover:scale-110 transition-all duration-300 text-tertiary font-bold py-2 px-4 rounded" %>
  </div>
  <ul class="">
    <% @organizations.each do |organization| %>
      <li class="my-2">
        <%= link_to organization.name, organization_path(organization), class: "text-gray-600 font-semibold text-lg hover:text-blue-800 " %>
      </li>
    <% end %>
  </ul>
</div>
