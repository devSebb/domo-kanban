<div class="mx-10">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl my-5">My Projects</h1>
    <%= link_to "New", new_organization_path, class: "bg-tertiary text-white hover:bg-secondary hover:text-tertiary hover:scale-110 transition duration-300 ease-in-out font-semibold py-2 px-4 rounded" %>
  </div>

  <% if @organizations.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @organizations.each do |organization| %>
        <div class="bg-white shadow-md rounded-lg p-4 hover:shadow-lg transition-shadow duration-300">
          <%= link_to organization_path(organization), class: "block" do %>
            <h2 class="text-xl font-semibold text-gray-800 hover:text-tertiary"><%= organization.name %></h2>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center text-gray-600 mt-20">
      <p>No projects created yet.<br>Add your first project and see it displayed here</p>
    </div>
  <% end %>
</div>
