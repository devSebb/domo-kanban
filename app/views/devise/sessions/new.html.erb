<div class="flex items-center justify-center my-10 ">
  <div class="p-4 w-1/2 max-w-md rounded-lg" style="box-shadow: 0 0 15px 5px #f19992;">
    <h2 class="text-xl text-center font-bold mb-4">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div class="field">
        <%= f.label :email, class: "block font-light mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full bg-transparent border border-gray-600 rounded-md p-2 focus:border-white focus:outline-none focus:ring-1 focus:ring-white" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "block font-light mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full bg-transparent border border-gray-600 rounded-md p-2 focus:border-white focus:outline-none focus:ring-1 focus:ring-white" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex items-center">
          <%= f.check_box :remember_me, class: "mr-2 bg-gray-800 focus:bg-gray-900 rounded-md" %>
          <%= f.label :remember_me, class: "font-light" %>
        </div>
      <% end %>

      <div class="actions flex justify-center">
        <%= f.submit "Log in", class: "w-1/2 bg-gray-800 hover:bg-transparent hover:text-gray-800 hover:border-gray-800 text-white font-bold py-2 px-4 rounded-md transition duration-300 ease-in-out cursor-pointer" %>
      </div>
    <% end %>


    <div class="text-center flex flex-col">
      <p class="text-gray-600 my-3">or</p>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
