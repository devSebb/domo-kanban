<div class="flex items-center justify-center my-10 ">
  <div class="p-4 w-1/2 max-w-md rounded-lg" style="box-shadow: 0 0 15px 5px #f19992;">
    <h2 class="text-xl text-center font-bold mb-4">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4", multipart: true }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "block font-light mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full bg-transparent border border-gray-600 rounded-md p-2 focus:border-white focus:outline-none focus:ring-1 focus:ring-white" %>
      </div>

      <div class="field">
        <%= f.label :first_name, class: "block font-light mb-1" %>
        <%= f.text_field :first_name, class: "w-full bg-transparent border border-gray-600 rounded-md p-2 focus:border-white focus:outline-none focus:ring-1 focus:ring-white" %>
      </div>

      <div class="field">
        <%= f.label :last_name, class: "block font-light mb-1" %>
        <%= f.text_field :last_name, class: "w-full bg-transparent border border-gray-600 rounded-md p-2 focus:border-white focus:outline-none focus:ring-1 focus:ring-white" %>
      </div>

      <div class="field">
        <%= f.label :username, class: "block font-light mb-1" %>
        <%= f.text_field :username, class: "w-full bg-transparent border border-gray-600 rounded-md p-2 focus:border-white focus:outline-none focus:ring-1 focus:ring-white" %>
      </div>

      <div class="field">
        <%= f.label :photo, "Profile Picture", class: "block font-light mb-1" %>
        <%= f.file_field :photo, class: "w-full bg-transparent border border-gray-600 rounded-md p-2 focus:border-white focus:outline-none focus:ring-1 focus:ring-white" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, class: "block font-light mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full bg-transparent border border-gray-600 rounded-md p-2 focus:border-white focus:outline-none focus:ring-1 focus:ring-white" %>
        <% if @minimum_password_length %>
          <em class="text-sm"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
        <span class="text-sm block">(leave blank if you don't want to change it)</span>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "block font-light mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full bg-transparent border border-gray-600 rounded-md p-2 focus:border-white focus:outline-none focus:ring-1 focus:ring-white" %>
      </div>

      <div class="field">
        <%= f.label :current_password, class: "block font-light mb-1" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full bg-transparent border border-gray-600 rounded-md p-2 focus:border-white focus:outline-none focus:ring-1 focus:ring-white" %>
        <span class="text-sm block">(we need your current password to confirm your changes, except for profile picture updates)</span>
      </div>

      <div class="actions flex justify-center">
        <%= f.submit "Update", class: "w-1/2 bg-gray-800 hover:bg-gray-900 text-white font-bold py-2 px-4 rounded-md transition duration-300 ease-in-out cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-8">
      <h3 class="text-lg font-bold mb-2">Cancel my account</h3>
      <div class="text-sm mb-2">Unhappy?</div>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "w-full bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-md transition duration-300 ease-in-out cursor-pointer" %>
    </div>

    <div class="mt-4 text-center">
      <%= link_to "Back", :back, class: "text-blue-500 hover:text-blue-600" %>
    </div>
  </div>
</div>
