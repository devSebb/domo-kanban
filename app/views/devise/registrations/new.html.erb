<div class="flex items-center justify-center min-h-screen py-12 px-4 sm:px-6 lg:px-8">
  <div class="relative w-full max-w-xl">
    <!-- Decorative elements -->
    <div class="absolute -top-12 -left-12 w-32 h-32 bg-tertiary rounded-full opacity-20 animate-pulse"></div>
    <div class="absolute -bottom-8 -right-8 w-24 h-24 bg-secondary rounded-full opacity-20 animate-pulse delay-150"></div>

    <div class="relative p-8 rounded-2xl" style="box-shadow: 0 0 15px 5px #f19992;">
      <!-- Header Section -->
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold">Join the Innovation</h2>
        <p class="mt-2 text-gray-600">Create your account and start managing projects like never before</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Name Section with side-by-side fields -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="relative group">
            <%= f.text_field :first_name, autofocus: true, class: "peer w-full bg-transparent border-b-2 border-gray-400 p-2 focus:border-tertiary focus:outline-none transition-colors", placeholder: " " %>
            <%= f.label :first_name, class: "absolute left-2 -top-5 text-sm text-gray-600 peer-placeholder-shown:text-base peer-placeholder-shown:top-2 peer-focus:-top-5 peer-focus:text-sm transition-all duration-300" %>
          </div>

          <div class="relative group">
            <%= f.text_field :last_name, class: "peer w-full bg-transparent border-b-2 border-gray-400 p-2 focus:border-tertiary focus:outline-none transition-colors", placeholder: " " %>
            <%= f.label :last_name, class: "absolute left-2 -top-5 text-sm text-gray-600 peer-placeholder-shown:text-base peer-placeholder-shown:top-2 peer-focus:-top-5 peer-focus:text-sm transition-all duration-300" %>
          </div>
        </div>

        <!-- Username and Email -->
        <div class="space-y-6">
          <div class="relative group">
            <div class="absolute left-2 top-2 text-gray-400">@</div>
            <%= f.text_field :username, class: "w-full bg-transparent border-b-2 border-gray-400 p-2 pl-8 focus:border-tertiary focus:outline-none transition-colors", placeholder: "username" %>
          </div>

          <div class="relative group">
            <%= f.email_field :email, autocomplete: "email", class: "peer w-full bg-transparent border-b-2 border-gray-400 p-2 focus:border-tertiary focus:outline-none transition-colors", placeholder: " " %>
            <%= f.label :email, class: "absolute left-2 -top-5 text-sm text-gray-600 peer-placeholder-shown:text-base peer-placeholder-shown:top-2 peer-focus:-top-5 peer-focus:text-sm transition-all duration-300" %>
          </div>
        </div>

        <!-- Password Fields -->
        <div class="space-y-6">
          <div class="relative group" data-controller="password-toggle">
            <%= f.password_field :password, autocomplete: "new-password",
                class: "peer w-full bg-transparent border-b-2 border-gray-400 p-2 pr-10 focus:border-tertiary focus:outline-none transition-colors",
                placeholder: " ",
                data: { password_toggle_target: "password" } %>
            <%= f.label :password, class: "absolute left-2 -top-5 text-sm text-gray-600 peer-placeholder-shown:text-base peer-placeholder-shown:top-2 peer-focus:-top-5 peer-focus:text-sm transition-all duration-300" %>
            <% if @minimum_password_length %>
              <span class="text-xs text-gray-500 absolute -bottom-5">At least <%= @minimum_password_length %> characters</span>
            <% end %>
            <button type="button" class="absolute right-2 top-2" data-action="click->password-toggle#toggle">
              <svg class="eye-open w-5 h-5"
                   data-password-toggle-target="eyeOpen"
                   fill="none"
                   stroke="currentColor"
                   viewBox="0 0 24 24"
                   xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              <svg class="eye-closed w-5 h-5 hidden"
                   data-password-toggle-target="eyeClosed"
                   fill="none"
                   stroke="currentColor"
                   viewBox="0 0 24 24"
                   xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
              </svg>
            </button>
          </div>

          <div class="relative group" data-controller="password-toggle">
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "peer w-full bg-transparent border-b-2 border-gray-400 p-2 pr-10 focus:border-tertiary focus:outline-none transition-colors",
                placeholder: " ",
                data: { password_toggle_target: "password" } %>
            <%= f.label :password_confirmation, class: "absolute left-2 -top-5 text-sm text-gray-600 peer-placeholder-shown:text-base peer-placeholder-shown:top-2 peer-focus:-top-5 peer-focus:text-sm transition-all duration-300" %>
            <button type="button" class="absolute right-2 top-2" data-action="click->password-toggle#toggle">
              <svg class="eye-open w-5 h-5"
                   data-password-toggle-target="eyeOpen"
                   fill="none"
                   stroke="currentColor"
                   viewBox="0 0 24 24"
                   xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              <svg class="eye-closed w-5 h-5 hidden"
                   data-password-toggle-target="eyeClosed"
                   fill="none"
                   stroke="currentColor"
                   viewBox="0 0 24 24"
                   xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="mt-8">
          <%= f.submit "Create Account", class: "w-full bg-gradient-to-r from-tertiary to-secondary text-white font-bold py-3 px-4 rounded-lg transform hover:scale-105 transition-all duration-300 hover:shadow-lg" %>
        </div>
      <% end %>

      <!-- Links Section -->
      <div class="mt-6 text-center space-y-2">
        <p class="text-sm text-gray-600">Already have an account?</p>
        <%= link_to "Sign in", new_session_path(resource_name), class: "text-tertiary hover:text-secondary transition-colors duration-300" %>
      </div>
    </div>
  </div>
</div>
